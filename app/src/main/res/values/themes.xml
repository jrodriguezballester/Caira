<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Caira15" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--    <style name="Theme.Caira15" parent="Theme.AppCompat">-->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">Poppins</item>


    </style>

    <style name="Theme.Caira15.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Caira15.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Caira15.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Caira15.Titulo">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/grisTexto</item>
    </style>

    <style name="Theme.Caira15.Titulo.Blanco">

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Caira15.SubTitulo">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/moradoTexto</item>
    </style>

    <style name="Theme.Caira15.Texto">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.Caira15.Texto.Gris">
        <item name="android:textColor">@color/grisTexto</item>
    </style>

    <style name="Theme.Caira15.Texto.Morado">
        <item name="android:textColor">@color/moradoTexto</item>
    </style>

    <style name="Theme.Caira15.Boton">
        <item name="background">@drawable/degradado</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Caira15.Fondo">
        <item name="android:background">@color/white</item>
    </style>


</resources>